<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.univr.android.flickrclient.view.MainActivity" >

    <!-- TabletView Ã¨ un linearlayout quindi ci aggiungo
    i due frame che voglio vengano mostrati contemporaneamente
    sul tablet e seleziono orientation horizontal -->
    <it.univr.android.flickrclient.view.TabletView
        android:id="@+id/tablet_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <FrameLayout
            android:id="@+id/search_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"></FrameLayout>

    </it.univr.android.flickrclient.view.TabletView>
</FrameLayout>